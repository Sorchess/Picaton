# API Configuration
API__PORT=8000
API__URL=http://localhost:8000

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api

# Python Path
PYTHONPATH=./backend/

# MongoDB Configuration
MONGO__NAME=picaton
MONGO__USERNAME=admin
MONGO__PASSWORD=secret
MONGO__HOST=mongo
MONGO__PORT=27017

# JWT Configuration
JWT__SECRET_KEY=your-secret-key-change-in-production
JWT__ALGORITHM=HS256
JWT__ACCESS_TOKEN_EXPIRE_MINUTES=10080

# GigaChat API (Сбер)
GIGACHAT__CREDENTIALS=your-base64-encoded-credentials
GIGACHAT__SCOPE=GIGACHAT_API_PERS
GIGACHAT__MODEL=GigaChat
GIGACHAT__MAX_TOKENS=500
GIGACHAT__TEMPERATURE=0.7
GIGACHAT__VERIFY_SSL_CERTS=false

# Local LLM Configuration (llama.cpp server)
LOCAL_LLM__ENABLED=true
LOCAL_LLM__BASE_URL=http://host.docker.internal:8080
LOCAL_LLM__MODEL=T-lite-instruct-0.1
LOCAL_LLM__MAX_TOKENS=150
LOCAL_LLM__TEMPERATURE=0.7
LOCAL_LLM__TIMEOUT=120.0

# Embedding Service Configuration (USER-bge-m3)
EMBEDDING__ENABLED=true
EMBEDDING__MODEL_PATH=/root/models/embedding/user-bge-m3
EMBEDDING__DIMENSIONS=1024
EMBEDDING__NORMALIZE=true

# Cloudinary Configuration
CLOUDINARY__CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY__API_KEY=your-cloudinary-api-key
CLOUDINARY__API_SECRET=your-cloudinary-api-secret
CLOUDINARY__FOLDER=picaton/avatars

# Email Configuration (Postfix на сервере)
EMAIL__SMTP_HOST=host.docker.internal
EMAIL__SMTP_PORT=25
EMAIL__SMTP_USER=
EMAIL__SMTP_PASSWORD=
EMAIL__FROM_EMAIL=info@picaton.com
EMAIL__FROM_NAME=Picaton
EMAIL__USE_TLS=false
EMAIL__ENABLED=true

# RabbitMQ Configuration
RABBITMQ__HOST=rabbitmq
RABBITMQ__PORT=5672
RABBITMQ__USERNAME=guest
RABBITMQ__PASSWORD=guest
 
# Magic Link Configuration
MAGIC_LINK__SECRET_KEY=magic-link-secret-change-in-production
MAGIC_LINK__EXPIRE_MINUTES=15

# Telegram Bot Configuration
TELEGRAM__BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM__BOT_USERNAME=your_bot_username